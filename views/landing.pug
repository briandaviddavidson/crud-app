extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
    input(name="leadEmail" type="email", placeholder="Please enter your e-mail")
    button(type="submit") Submit
  if leads
    h1 Leads
    for lead in leads
      p
        span #{lead.email}
        | 
        a(href="/lead/" + lead.id) Details
